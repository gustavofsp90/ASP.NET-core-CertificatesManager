		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Applications)
		</dt>
		<dd>
			@for (var i = 0; i < @Model.Applications.Count; i++)
			{
				@Html.DisplayFor(model => @Model.Applications[i].Text)
				if ((i + 1) != @Model.Applications.Count)
				{
