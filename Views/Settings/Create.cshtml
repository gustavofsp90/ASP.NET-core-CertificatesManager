@model CertificatesManager.ViewModels.SettingsViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Settings</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		@if (TempData["Msg"] != null && TempData["Msg"].ToString().Contains("Error"))
		{
			<div class="alert alert-danger" style="margin-top:20px">
				@TempData["Msg"]
			</div>
		}
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="EmailSubject" class="control-label"></label>
				<input asp-for="EmailSubject" class="form-control" />
				<span asp-validation-for="EmailSubject" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DaysBeforeEmail" class="control-label"></label>
				<input asp-for="DaysBeforeEmail" class="form-control" />
				<span asp-validation-for="DaysBeforeEmail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Group" class="control-label"></label>
				<select asp-for="Group" class="form-control selectpicker" asp-items="@Model.Groups"></select>
				<span asp-validation-for="Group" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

