@model IEnumerable<CertificatesManager.ViewModels.SettingsViewModel>

@{
	ViewData["Title"] = "Index";
}

<h3>Settings</h3>

<p>
	<a class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
</p>
@if (TempData["Msg"] != null)
{
	<div class="alert alert-success" style="margin-top:20px">
		@TempData["Msg"]
	</div>
}

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Group)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EmailSubject)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DaysBeforeEmail)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Group)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmailSubject)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DaysBeforeEmail)
				</td>
				<td>
					<a class="btn btn-default btn-sm" asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-info-sign"></span></a>
					<a class="btn btn-default btn-sm" asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
					<a class="btn btn-default btn-sm" asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
				</td>
			</tr>
		}
	</tbody>
</table>
